    "version": "0.2.0",
    "configurations": [
        {
            "name": "shpm",
            "type": "bashdb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/shpm",
            "args": [
                "install",
                "uptrain"
            ]

        },
        {
            "name": "install-package.sh",
            "type": "bashdb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/install-package.sh",
            "args": [
                "uptrain"
            ],
            "env": {
                "scriptName":"${workspaceFolder}/bin/install-package.sh"
            }

        }
    ]
}
